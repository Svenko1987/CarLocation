<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.AddVehicle">

    <!-- TODO: Update blank fragment layout -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/saveVehicleBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="Save"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView7" />

        <Button
            android:id="@+id/button3"
            android:layout_width="128dp"
            android:layout_height="114dp"
            android:layout_marginEnd="16dp"
            android:text="Select color"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.484" />

        <Button
            android:id="@+id/button6"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="8dp"
            android:background="@android:drawable/ic_menu_camera"
            android:contentDescription="takePhoto"
            app:layout_constraintEnd_toEndOf="@+id/button3"
            app:layout_constraintHorizontal_bias="0.323"
            app:layout_constraintStart_toStartOf="@+id/imageView2"
            app:layout_constraintTop_toBottomOf="@+id/imageView2" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginEnd="24dp"
            app:layout_constraintBottom_toTopOf="@+id/button3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
             />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="Fill out fields"
            android:textColor="@color/darkBlue"
            app:layout_constraintBottom_toTopOf="@+id/imageView2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/vehiclaNameT"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:ems="10"
            android:hint="Vehicle name"
            android:inputType="textPersonName"
            android:textColor="@color/darkBlue"
            android:textColorHint="@color/darkBlue"
            app:layout_constraintEnd_toStartOf="@+id/imageView2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/imageView2" />

        <EditText
            android:id="@+id/licencePlateT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:ems="10"
            android:hint="Licence plate"
            android:inputType="textPersonName"
            android:minHeight="48dp"
            android:textColor="@color/darkBlue"
            android:textColorHint="@color/darkBlue"
            app:layout_constraintStart_toStartOf="@+id/vehiclaNameT"
            app:layout_constraintTop_toBottomOf="@+id/vehiclaNameT" />

        <EditText
            android:id="@+id/manufacturerT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:ems="10"
            android:hint="Manufacturer"
            android:inputType="textPersonName"
            android:minHeight="48dp"
            android:textColor="@color/darkBlue"
            android:textColorHint="@color/darkBlue"
            app:layout_constraintStart_toStartOf="@+id/vehiclaNameT"
            app:layout_constraintTop_toBottomOf="@+id/licencePlateT" />

        <EditText
            android:id="@+id/dateT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Date"
            android:inputType="date"
            android:minHeight="48dp"
            android:textAlignment="gravity"
            android:textColor="@color/darkBlue"
            android:textColorHint="@color/darkBlue"
            app:layout_constraintStart_toStartOf="@+id/vehiclaNameT"
            app:layout_constraintTop_toBottomOf="@+id/manufacturerT" />

        <EditText
            android:id="@+id/noteT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:ems="10"
            android:inputType="textMultiLine"
            android:minHeight="48dp"
            android:text="Enter note here"
            android:textColorHint="@color/darkBlue"
            android:textColor="@color/darkBlue"
            app:layout_constraintStart_toStartOf="@+id/vehiclaNameT"
            app:layout_constraintTop_toBottomOf="@+id/textView6" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="First registration"
            android:textColorHint="@color/darkBlue"
            android:textColor="@color/darkBlue"
            app:layout_constraintEnd_toEndOf="@+id/dateT"
            app:layout_constraintStart_toStartOf="@+id/dateT"
            app:layout_constraintTop_toBottomOf="@+id/dateT" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Note"
            android:textColorHint="@color/darkBlue"
            android:textColor="@color/darkBlue"

            app:layout_constraintEnd_toEndOf="@+id/noteT"
            app:layout_constraintStart_toStartOf="@+id/noteT"
            app:layout_constraintTop_toBottomOf="@+id/noteT" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>